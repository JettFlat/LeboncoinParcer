<Window x:Class="LeboncoinParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeboncoinParser"
        mc:Ignorable="d"
        Title="LeboncoinParser" Height="450" Width="850">
    <Grid>
        <DataGrid x:Name="LeboncoinDataGrid" AutoGenerateColumns="True" AutoGeneratingColumn="LeboncoinDataGridOnAutoGeneratingColumn"></DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20,20,20,20">
            <Label x:Name="StatusLabel" HorizontalAlignment="Left" Content="Idle"></Label>
            <Button x:Name="NewParseButton" Width="100.0" Height="20.0" Margin="0,0,20,0" Click="NewParseButtonOnClick">New Parse</Button>
            <Button x:Name="ContinueParseButton" Width="100.0" Height="20.0" Margin="0,0,20,0" Click="ContinueParseButtonOnClick">Continue Parse</Button>
            <Button x:Name="StopParseButton" Width="100.0" Height="20.0" Margin="0,0,20,0" Click="StopParseButtonOnClick">Stop Parse</Button>
            <Button x:Name="ExportButton" Width="100.0" Height="20.0" Margin="0,0,20,0" Click="ExportButtonOnClick">Export</Button>
            <CheckBox x:Name="SkipFatalErrorsCheckBox" IsChecked="False" Width="120.0" Height="20.0" Margin="0,0,20,0" Click="ExportButtonOnClick">Skip Fatal Errors</CheckBox>
            <Label x:Name="StartPageLabel" HorizontalAlignment="Left" Content="Start Page:"></Label>
            <TextBox x:Name="StartPageTextBox" Width="50.0" Height="20.0" Margin="0,0,20,0" Text="1" FlowDirection="RightToLeft"></TextBox>
        </StackPanel>
    </Grid>
</Window>
